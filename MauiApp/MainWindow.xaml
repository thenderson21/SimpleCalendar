<?xml version="1.0" encoding="utf-8" ?>
<Window xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        xmlns:local="clr-namespace:SimpleEventsCalenderApp"
        x:Class="SimpleEventsCalenderApp.MainWindow">
    <Window.Resources>
        <Style x:Key="TitleBarButtonStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="Transparent" />
            <Setter Property="BorderColor" Value="Transparent" />
            <Setter Property="BorderWidth" Value="0" />
            <Setter Property="CornerRadius" Value="0" />
            <Setter Property="TextColor" Value="{AppThemeBinding Light=#1b2233, Dark=#eef2f8}" />
            <Setter Property="FontSize" Value="30" />
            <Setter Property="FontAttributes" Value="Bold" />
        </Style>
        <Style x:Key="TitleBarNavButtonStyle" TargetType="Button" BasedOn="{StaticResource TitleBarButtonStyle}">
            <Setter Property="FontSize" Value="" />
            <Setter Property="FontAttributes" Value="Bold" />
        </Style>
    </Window.Resources>

    <Window.TitleBar>
        <TitleBar x:Name="AppTitleBar">
            <TitleBar.Content>
                <Grid ColumnDefinitions="*,Auto" VerticalOptions="Center">
                    <HorizontalStackLayout Grid.Column="0"
                                           Spacing="6"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center">
                        <ImageButton Source="{AppThemeBinding Light=back_lt.png, Dark=back_dk.png}"
                                     Clicked="OnPrevYearClicked"
                                     Padding="10" />
                        <Label x:Name="TitleYearLabel"
                               Text="----"
                               FontAttributes="Bold"
                               FontSize="24"
                               HorizontalTextAlignment="Center"
                               VerticalTextAlignment="Center" />
                        <ImageButton Source="{AppThemeBinding Light=forward_lt.png, Dark=forward_dk.png}"
                                     Clicked="OnNextYearClicked"
                                     Padding="10" />
                    </HorizontalStackLayout>
                    <HorizontalStackLayout Grid.Column="1"
                                           Spacing="10"
                                           HorizontalOptions="End"
                                           VerticalOptions="Center">
                        <ImageButton Source="{AppThemeBinding Light=add_lt.png, Dark=add_dk.png}"
                                     Clicked="OnAddClicked"
                                     Padding="8,8,20,8" />
                    </HorizontalStackLayout>
                </Grid>
            </TitleBar.Content>
        </TitleBar>
    </Window.TitleBar>

    <local:AppShell />
</Window>
